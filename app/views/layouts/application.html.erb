<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Tragicace" %></title>
    <%= stylesheet_link_tag "application" %>
		<script src="http://lib.roosoft.com/js/markerclusterer.js"></script>
		<script src="http://maps.google.com/maps/api/js?libraries=geometry&sensor=false"></script>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body class="with-header">
    <div class="topbar">
      <div class="fill">
        <div class="container-fluid">
					<%= render "layouts/topbar" %>
        </div>
      </div>
    </div>
    <%= display_flash_message %>
    <div class="container-fluid">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
      <footer>
        <p>&copy; Tragicace <%= Time.now.year %></p>
      </footer>
    </div>
  </body>
</html>
